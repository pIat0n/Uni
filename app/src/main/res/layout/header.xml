<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Header"
    android:padding="@dimen/header_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/header_userImage"
        android:layout_width="@dimen/header_userImageSize"
        android:layout_height="@dimen/header_userImageSize"
        android:src="@drawable/example"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:riv_border_width="0dp"/>
    <TextView
        android:id="@+id/header_userName"
        style="@style/Text"
        android:text="Solovev Platon"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_normal"
        android:layout_below="@id/header_userImage"
        android:layout_marginTop="@dimen/header_userNameMarginTop"/>
    <TextView
        android:id="@+id/header_userPhoneNumber"
        style="@style/Text"
        android:text="+70000000000"
        android:textSize="@dimen/textSize_small"
        android:layout_below="@id/header_userName"/>
</RelativeLayout>